<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.login.LoginActivity">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="240dp"
        android:id="@+id/ll_input"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginLeft="56dp"
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:background="@mipmap/ic_launcher"
            />
        <View
            android:layout_marginLeft="13dp"
            android:background="#ffffff"
            android:layout_width="1dp"
            android:layout_height="15dp"/>
        <EditText
            android:alpha="0.5"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@null"
            android:textColorHint="#ffffff"
            android:gravity="center_vertical"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:hint="用户名"
            />
        <!--android:textCursorDrawable="@drawable/edittext_color_cursor"-->
    </LinearLayout>
    <View
        android:alpha="0.5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginLeft="56dp"
            android:layout_width="12dp"
            android:layout_height="14dp"
            />
        <!--android:background="@drawable/suo"-->
        <View
            android:layout_marginLeft="13dp"
            android:background="#ffffff"
            android:layout_width="1dp"
            android:layout_height="15dp"/>
        <EditText
            android:inputType="textPassword"
            android:alpha="0.5"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@null"
            android:textColorHint="#ffffff"
            android:gravity="center_vertical"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:hint="密码"
        />
        <!--android:textCursorDrawable="@drawable/edittext_color_cursor"-->
    </LinearLayout>
    <View
        android:alpha="0.5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_remeber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_remeber"
                android:layout_width="18dp"
                android:layout_height="15dp"
                />
            <!--android:background="@drawable/select_remeber_password"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="记住密码"
                android:textColor="#C4FFFF"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_forget_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/dp35"
            android:gravity="center"
            android:text="忘记密码 >>"
            android:textColor="#C4FFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginTop="@dimen/dp100"
        android:id="@+id/tv_login"
        android:layout_width="250dp"
        android:layout_height="38dp"
        />
    <!--android:background="@drawable/anniu_denglu"-->
</LinearLayout>
